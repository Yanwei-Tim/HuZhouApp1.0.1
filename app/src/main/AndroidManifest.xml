<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.geekband.huzhouapp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.LoginActivity"/>
        <activity android:name=".nav.GalleryActivity"/>
        <activity android:name=".nav.CameraActivity"/>
        <activity android:name=".activity.WebViewActivity"/>
        <activity android:name=".nav.ManageActivity"/>
        <activity android:name=".activity.NewsContentActivity"/>
        <activity android:name=".nav.AlbumActivity"/>
        <activity android:name=".fragment.news.CourseListActivity"/>
        <activity android:name=".fragment.news.CourseContentActivity"/>
        <activity android:name=".fragment.news.GradeActivity"/>

        <receiver android:name=".service.NotificationBroadCast">
            <intent-filter>
                <action android:name="android.intent.action.NOTIFICATION_BROADCAST"/>
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT"/>
            </intent-filter>
        </receiver>

        <service android:name=".service.NotificationService"/>

    </application>

</manifest>
